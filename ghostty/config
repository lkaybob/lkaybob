# Ghostty Configuration
# Migrated from iTerm2

# Font
font-family = UbuntuMono Nerd Font Mono
font-size = 17

# Theme
# Run `ghostty +list-themes` to see all available themes
theme = Monokai Vivid

# Window
window-width = 80
